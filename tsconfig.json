{
	"compilerOptions": {
		"baseUrl": "./src",
		"sourceMap": true,
		"target": "ES2019",
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react",
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"paths": {
			"@/*": ["*"],
			"@components/*": ["components/*"],
			"@assets/*": ["assets/*"],
			"@types": ["typings/types/index.ts"],
			"@enums": ["typings/enums/index.ts"]
		}
	},
	"include": ["src/**/*"]
}
